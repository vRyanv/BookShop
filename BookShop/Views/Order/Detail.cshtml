    </thead>
    <tbody id="body-order-detail-table">
        @for (int i = 0; i < 5; i++)
        {
            <tr>
                <th scope="row">@(i + 1)</th>
                <th>book title</th>
                <th>
                    <img src="~/img/book/book_demo.jpg" style="width:8rem; height:9rem" />
                </th>
                <th>$123</th>
